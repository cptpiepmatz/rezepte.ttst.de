{
  "name": "@rezepte.ttst.de/app",
  "version": "0.0.0",
  "scripts": {
    "prestart": "npm run prebuild",
    "start": "ng serve",
    "wasm": "wasm-pack build --target=web --release --scope=rezepte.ttst.de --out-name=pdf",
    "meta": "deno run --no-npm --allow-read --allow-write --allow-run=git scripts/meta.ts",
    "prebuild": "npm run wasm && npm run meta",
    "build": "ng build",
    "fmt:rs": "cargo fmt",
    "fmt:ts": "deno fmt .",
    "fmt": "npm run fmt:rs && npm run fmt:ts",
    "fmt-check:rs": "cargo fmt --check",
    "fmt-check:ts": "deno fmt . --check",
    "fmt-check": "npm run fmt-check:rs && npm run fmt-check:ts",
    "lint:rs": "cargo check",
    "lint:ts": "deno lint .",
    "lint": "npm run lint:rs && npm run lint:ts",
    "spell": "cspell .",
    "docker:build": "deno run --no-npm --allow-read --allow-run=docker scripts/build.docker.ts -t rezepte.ttst.de ."
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/platform-browser": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/remixicon": "^33.0.0",
    "bulma": "^1.0.4",
    "markdown-it": "^14.1.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@cspell/dict-de-de": "^4.1.2",
    "@types/markdown-it": "^14.1.2",
    "baseline-browser-mapping": "^2.9.4",
    "typescript": "~5.9.3"
  },
  "optionalDependencies": {
    "cspell": "^9.4.0",
    "deno": "^2.5.6",
    "wasm-pack": "^0.13.1"
  },
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.4"
  }
}
